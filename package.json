{
  "name": "firebase-erp-india",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "vite",
    "db:init": "ts-node scripts/initDatabase.ts",
    "db:reset": "ts-node scripts/resetDatabase.ts",
    "db:backup": "mysqldump -u ${DB_USER} -p${DB_PASSWORD} ${DB_NAME} > backups/backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:restore": "mysql -u ${DB_USER} -p${DB_PASSWORD} ${DB_NAME}",
    "migrate:firebase": "ts-node scripts/migrateFromFirebase.ts"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@eslint/js": "^9.33.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.33.0",
    "firebase": "^10.12.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.395.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.5",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "10.4.19",
    "eslint-plugin-react": "^7.37.5",
    "firebase-tools": "^13.11.2",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
