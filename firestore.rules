rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if current user is admin
    function isCurrentUserAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    // Simplified ERP access check - just check hasErpAccess boolean
    function hasErpAccess() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.hasErpAccess == true);
    }
    
    // Simplified Payroll access check  
    function hasPayrollAccess() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.hasPayrollAccess == true);
    }
    
    // Simplified Projects access check
    function hasProjectsAccess() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.hasProjectsAccess == true);
    }
    
    // Users collection - users can read their own profile, admins can manage all
    match /users/{userId} {
      allow read: if isAuthenticated() && 
                     (request.auth.uid == userId || isCurrentUserAdmin());
      allow create: if isAuthenticated() && 
                       (isCurrentUserAdmin() || request.auth.uid == userId);
      allow update: if isAuthenticated() && 
                       (isCurrentUserAdmin() || request.auth.uid == userId);
      allow delete: if isCurrentUserAdmin();
    }
    
    // Company settings - Admin can write, ERP users can read
    match /company_settings/{document} {
      allow read: if hasErpAccess();
      allow write: if isCurrentUserAdmin();
    }
    
    // Settings - Admin can write, ERP users can read
    match /settings/{document} {
      allow read: if hasErpAccess();
      allow write: if isCurrentUserAdmin();
    }
    
    // ERP modules - Simplified access control
    match /customers/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /products/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /vendors/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /quotes/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /sales_orders/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /delivery_orders/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /purchase_orders/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /stock_movements/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /inventory/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /point_of_contacts/{document} {
      allow read, write: if hasErpAccess();
    }
    
    match /transporters/{document} {
      allow read, write: if hasErpAccess();
      
      // Allow access to transactions subcollection
      match /transactions/{transactionId} {
        allow read, write: if hasErpAccess();
      }
    }
    
    // Payroll modules - Simplified access control
    match /payroll_employees/{document} {
      allow read, write: if hasPayrollAccess();
    }
    
    match /payroll_advances/{document} {
      allow read, write: if hasPayrollAccess();
    }
    
    match /payroll_records/{document} {
      allow read, write: if hasPayrollAccess();
    }
    
    match /payroll_settings/{document} {
      allow read, write: if hasPayrollAccess();
    }
    
    match /payroll_leaves/{document} {
      allow read: if hasPayrollAccess();
      allow create: if hasPayrollAccess();
      allow update: if hasPayrollAccess() && 
                       (isCurrentUserAdmin() || 
                        !('status' in request.resource.data) || 
                        request.resource.data.status == resource.data.status);
      allow delete: if isCurrentUserAdmin();
    }
    
    // Projects modules
    match /projects_module/{document} {
      allow read, write: if hasProjectsAccess();
    }
    
    // Chat messages - authenticated users only
    match /chat_messages/{document} {
      allow read, write: if isAuthenticated();
    }
    
    // Scratchpads - authenticated users only
    match /scratchpads/{document} {
      allow read, write: if isAuthenticated();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}