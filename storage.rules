rules_version = '2';

// Firebase Storage security rules for PDF files
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read PDFs in the pdfs folder
    match /pdfs/{fileName} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write (upload) access to authenticated users
      // Restrict to PDF files under 10MB
      allow write: if request.auth != null
                   && resource == null  // Only allow new files, not overwrites
                   && request.resource.size < 10 * 1024 * 1024  // 10MB limit
                   && request.resource.contentType == 'application/pdf';
    }
    
    // Deny access to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}